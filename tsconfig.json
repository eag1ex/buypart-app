/* To learn more about this file see: https://angular.io/config/tsconfig. */
{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "typeRoots": [
      "node_modules/@types"
    ],
    "paths": {
      "@buypart/scss":[
        "libs/theme/scss"
      ],
      "@buypart/material": [
        "libs/material/src/index.ts",
      ],
      "@buypart/buypart-pages": [
        "libs/buypart-pages/src/index.ts"
      ],
      "@buypart/theme": [
        "libs/theme/src/index.ts"
      ],
      "@buypart/interfaces": [
        "libs/interfaces/src/index.ts"
      ],
      
      "@buypart/services": [
        "libs/services/src/index.ts"
      ],

      "@buypart/utils": [
        "libs/utils/src/index.ts"
      ]
    },

    "downlevelIteration": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es2015",
    "module": "es2020",
    "lib": [
      "es2018",
      "dom"
    ]
  },
  "angularCompilerOptions": {
    "enableI18nLegacyMessageIdFormat": false
  }
}
