/* To learn more about this file see: https://angular.io/config/tsconfig. */
{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    
    "paths": {
      "@buypart/http": [
        "libs/http/src/index.ts"
      ],
      "@buypart/material": [
        "libs/material/src/index.ts",
      ],
      "@buypart/buypart-pages": [
        "libs/buypart-pages/src/index.ts"
      ],
      "@buypart/content-sections": [
        "libs/content-sections/src/index.ts"
      ],

      "states": [
        "dist/states/states",
        "dist/states"
      ]
    },

    "downlevelIteration": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es2015",
    "module": "es2020",
    "lib": [
      "es2018",
      "dom"
    ]
  },
  "angularCompilerOptions": {
    "enableI18nLegacyMessageIdFormat": false
  }
}
